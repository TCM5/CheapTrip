<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green4_cheaptrip</item>
        <item name="colorPrimaryDark">@color/green4_cheaptrip</item>
        <item name="colorAccent">@color/green4_cheaptrip</item>
        <item name="android:listDivider">@color/green4_cheaptrip</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@color/green4_cheaptrip</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">sans-serif-light</item>

    </style>


</resources>
