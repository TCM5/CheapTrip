<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/green3_cheaptrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_profile_my_cars_txt"
                    android:textColor="@color/green4_cheaptrip"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/fragment_profile_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/fragment_profile_brand_txt"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/fragment_profile_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/fragment_profile_model_txt"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/fragment_profile_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/fragment_profile_year_txt"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/fragment_profile_seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/fragment_profile_seats_txt"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/fragment_profile_addcar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/green4_cheaptrip"
                    android:elevation="10sp"
                    android:padding="5dp"
                                        android:text="@string/fragment_profile_add_car_tv_txt"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:elevation="15dp"

            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="10dp"

                    android:text="@string/fragment_profile_account_tv_txt"
                    android:textColor="@color/green4_cheaptrip"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fragment_profile_signout_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/fragment_profile_signout_btn_txt"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/fragment_profile_hardreset_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/fragment_profile_hardreset_btn_txt"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>
